<mah:MetroWindow 
    x:Class="MovieFinder2025.Views.MoviesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:Dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:MovieFinder2025.Views"
    mc:Ignorable="d"
    Title="MovieFinder 2025" Height="580" Width="1000"
    ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
    Dialog:DialogParticipation.Register="{Binding}">
    <mah:MetroWindow.IconTemplate>
        <DataTemplate>
            <iconPacks:PackIconMaterial Kind="MovieStar" Margin="10,7,0,0" Foreground="White" />
        </DataTemplate>
    </mah:MetroWindow.IconTemplate>
    <Grid>
        <!-- 그리드 영역나누기 -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="62"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 검색영역 -->
        <Grid Grid.Row="0" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0" Margin="5,10"
                     FontSize="14"
                     mah:TextBoxHelper.Watermark="검색할영화이름 입력"
                     mah:TextBoxHelper.AutoWatermark="True"
                     mah:TextBoxHelper.UseFloatingWatermark="True"
                     mah:TextBoxHelper.ClearTextButton="True"/>
            <Button Grid.Column="1" Margin="5,10" 
                    FontSize="14" Content="검색"
                    Style="{StaticResource MahApps.Styles.Button.Square.Accent}">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconModern Kind="Magnify" Margin="15,5" VerticalAlignment="Center" />
                            <TextBlock Text="{Binding}" Margin="5"/>
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
        </Grid>
        
        <!-- 검색결과 영역-->
        <DataGrid Grid.Row="1" Grid.Column="0" Margin="5" IsReadOnly="True" AutoGenerateColumns="False"
                  ItemsSource="{Binding}" 
                  SelectedItem=""
                  Style="{StaticResource MahApps.Styles.DataGrid.Azure}">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="선택"/>
                <DataGridTextColumn Header="한글제목" FontWeight="Bold" Binding="{Binding}" />
                <DataGridTextColumn Header="영어제목" Binding="{Binding}" />
                <DataGridTextColumn Header="개봉일" Binding="{Binding}" />
                <DataGridTextColumn Header="인기도" Binding="{Binding}" />
                <DataGridTextColumn Header="평점" Binding="{Binding}" />
            </DataGrid.Columns>
        </DataGrid>
        
        <!-- 포스터 영역 -->
        <Grid Grid.Row="1" Grid.Column="1" Grid.RowSpan="2">
            <GroupBox Header="포스터" Margin="10,5"
                      mah:HeaderedControlHelper.HeaderFontSize="14"
                      mah:HeaderedControlHelper.HeaderFontWeight="Bold"
                      mah:HeaderedControlHelper.HeaderHorizontalContentAlignment="Center">
                <Image Margin="10" Stretch="Fill" Source="/Views/No_Picture.png" />
            </GroupBox>
        </Grid>
        
        <!-- 버튼영역 -->
        <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal">
            <Button Content="즐겨찾기 추가" Margin="5" FontSize="12"
                    Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                    Padding="15,5">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="PlaylistPlus" Margin="5,5,10,5" VerticalAlignment="Center" />
                            <TextBlock Text="{Binding}" Margin="5"/>
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
            <Button Content="즐겨찾기 보기" Margin="5" FontSize="12" 
                    Style="{StaticResource MahApps.Styles.Button.Square.Highlight}" Padding="15,5">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="PlaylistStar" Margin="5,5,10,5" VerticalAlignment="Center" />
                            <TextBlock Text="{Binding}" Margin="5"/>
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
            <Button Content="즐겨찾기 삭제" Margin="5" FontSize="12" 
                    Style="{StaticResource MahApps.Styles.Button.Square}" Padding="15,5" Background="Black" Foreground="White">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="PlaylistRemove" Margin="5,5,10,5" VerticalAlignment="Center" />
                            <TextBlock Text="{Binding}" Margin="5"/>
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
            <Button Content="예고편 보기" Margin="5" FontSize="12" 
                    Style="{StaticResource MahApps.Styles.Button}" Padding="23,5" Background="Red" Foreground="White">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="Youtube" Margin="5,5,10,5" VerticalAlignment="Center" />
                            <TextBlock Text="{Binding}" Margin="5"/>
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
        </StackPanel>
        
        <!-- 상태바 영역 -->
        <StatusBar Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2">
            <StatusBarItem Content="TMDB &amp; Youtube API App" Margin="10,0"/>
            <Separator Style="{StaticResource MahApps.Styles.Separator.StatusBar}"/>
            <StatusBarItem Content="{Binding}" />

            <StatusBarItem Content="2025-05-14" HorizontalAlignment="Right" Margin="0,0,10,0"/>
        </StatusBar>
    </Grid>
</mah:MetroWindow>
